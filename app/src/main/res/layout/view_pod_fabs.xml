<?xml version="1.0" encoding="utf-8"?>
<net.aung.moviemaniac.views.pods.ViewPodFabs
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ib_favourite"
        android:layout_width="@dimen/fab_dimen"
        android:layout_height="@dimen/fab_dimen"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:background="@drawable/bg_fab"
        android:elevation="@dimen/tag_line_elevation"
        android:src="@drawable/ic_favorite_border_white_24dp" />

    <ImageButton
        android:id="@+id/ib_facebook"
        android:layout_width="@dimen/fab_dimen"
        android:layout_height="@dimen/fab_dimen"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:background="@drawable/bg_fab"
        android:elevation="@dimen/tag_line_elevation"
        android:src="@drawable/ic_facebook_white_24dp" />

    <ImageButton
        android:id="@+id/ib_share"
        android:layout_width="@dimen/fab_dimen"
        android:layout_height="@dimen/fab_dimen"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:background="@drawable/bg_fab"
        android:elevation="@dimen/tag_line_elevation"
        android:src="@drawable/ic_share_white_24dp" />

    <ImageButton
        android:id="@+id/ib_plus"
        android:layout_width="@dimen/fab_dimen"
        android:layout_height="@dimen/fab_dimen"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:background="@drawable/bg_fab"
        android:elevation="@dimen/tag_line_elevation"
        android:src="@drawable/ic_add_white_24dp" />

</net.aung.moviemaniac.views.pods.ViewPodFabs>